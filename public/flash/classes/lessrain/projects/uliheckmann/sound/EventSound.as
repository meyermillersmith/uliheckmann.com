/** * @author Thomas Meyer, Less Rain (thomas@lessrain.com) */class lessrain.projects.uliheckmann.sound.EventSound{	private var _targetMC:MovieClip;	private var _id:String;	private var _linkageID:String;	private var _sound : Sound;		public function EventSound(targetMC:MovieClip)	{		_targetMC=targetMC;	}		public function initialize():Void	{		_sound = new Sound(_targetMC);		_sound.attachSound( _linkageID );	}	public function finalize():Void	{		stop();		_sound = null;		_targetMC.removeMovieClip();	}		public function start():Void	{		_sound.start(  );	}		public function stop():Void	{		_sound.stop(  );	}		public function setVolume(volume:Number):Void	{		_sound.setVolume(volume);	}		public function setPan(pan:Number):Void	{		_sound.setPan(pan);	}		public function get id():String { return _id; }	public function set id(value:String):Void { _id=value; }	public function get linkageID():String { return _linkageID; }	public function set linkageID(value:String):Void { _linkageID=value; }		public function get targetMC():MovieClip { return _targetMC; }	public function set targetMC(value:MovieClip):Void { _targetMC=value; }}