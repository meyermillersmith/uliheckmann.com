/** * @author Thomas Meyer, Less Rain (thomas@lessrain.com) */import lessrain.projects.uliheckmann.effects.LetterMask;class lessrain.projects.uliheckmann.effects.LetterMaskFactory {	private static var instance : LetterMaskFactory;		private var _targetMC : MovieClip;	private var _letterMasks : Array;	public static function getInstance() : LetterMaskFactory 	{		if (instance == null) 		{			instance = new LetterMaskFactory();		}		return instance;	}	private function LetterMaskFactory()	{		_letterMasks = [];	}		public function getLetterMask( letter_:String ) : LetterMask	{		letter_ = letter_.toLowerCase();				var letterMask : LetterMask = searchLetterMask(letter_);				if (letterMask==null) letterMask = createLetterMask(letter_);				return letterMask;	}	private function searchLetterMask( letter_:String ) : LetterMask	{		for (var i : Number = 0; i < _letterMasks.length; i++)		{			if (LetterMask(_letterMasks[i]).getLetter()==letter_) return _letterMasks[i];		}		return null;	}	private function createLetterMask( letter_:String ) : LetterMask	{		var letterMask : LetterMask = new LetterMask(_targetMC.createEmptyMovieClip("letter_"+_targetMC.getNextHighestDepth(), _targetMC.getNextHighestDepth()), letter_);		letterMask.create();		_letterMasks.push(letterMask);		return letterMask;	}		public function setTargetMC(targetMC : MovieClip) : Void	{		_targetMC = targetMC;	}}