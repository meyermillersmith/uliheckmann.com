import lessrain.lib.utils.text.ExtendedStyleSheet;import lessrain.lib.utils.text.IRTLProxy;import lessrain.lib.utils.text.RTLConverter;
/** * @author Thomas Meyer, Less Rain (thomas@lessrain.com) */class lessrain.lib.utils.text.RTLProxy implements IRTLProxy{	private var _text:String;	private var _textWidth:Number;		public function RTLProxy()	{	}		public function convert( text_:String, styleSheet_:ExtendedStyleSheet, styleClass_:String, fieldWidth_:Number, widthBuffer_:Number, isMultiline_:Boolean ):Void	{		var rtlConverter:RTLConverter = new RTLConverter(text_, ExtendedStyleSheet(styleSheet_), styleClass_, fieldWidth_-widthBuffer_, isMultiline_);		//		var startTime:Number = (new Date()).getTime();		rtlConverter.convert();//		var endTime:Number = (new Date()).getTime();		_text = rtlConverter.convertedText;		_textWidth = rtlConverter.textWidth;	}		public function getText():String	{		return _text;	}		public function getTextWidth():Number	{		return _textWidth;	}}